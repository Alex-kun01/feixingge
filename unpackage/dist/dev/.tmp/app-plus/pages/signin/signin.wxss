page {
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
}
.signin .topber image {
  width: 20rpx;
  height: 36rpx;
  margin: 66rpx 0 0 30rpx;
}
.signin .title {
  font-size: 88rpx;
  font-weight: 800;
  margin: 114rpx 0 93rpx 57rpx;
}
.signin .change_fun {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 0 0 102rpx 57rpx;
}
.signin .change_fun .left {
  font-size: 32rpx;
  color: #666666;
}
.signin .change_fun .left.active {
  font-size: 36rpx;
  font-weight: bold;
  color: #111111;
}
.signin .change_fun .con {
  width: 2rpx;
  height: 28rpx;
  background: #CCCCCC;
  margin: 10rpx 37rpx 0 33rpx;
}
.signin .change_fun .right {
  font-size: 32rpx;
  color: #666666;
}
.signin .change_fun .right.active {
  font-size: 36rpx;
  font-weight: bold;
  color: #111111;
}
.signin .form {
  margin-left: 56rpx;
}
.signin .form .border_bom {
  width: 638rpx;
  border-bottom: 1rpx solid #9C9C9C;
  padding-bottom: 30rpx;
  margin-bottom: 29rpx;
}
.signin .form .border_bom input {
  font-size: 30rpx;
  color: #999999;
  text-indent: 1rpx;
}
.signin .form .getverifition {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.signin .form .getverifition .getverifition_btn {
  width: 188rpx;
  height: 61rpx;
  line-height: 61rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 24rpx;
  background: #D8D8D8;
  border-radius: 30rpx;
}
.signin .form .getverifition .getverifition_btn.active {
  background-color: #FF9805;
}
.signin .goregister {
  height: 28rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
  margin: 0 0 60rpx 57rpx;
}
.signin .btn_signin {
  width: 683rpx;
  height: 100rpx;
  border-radius: 48rpx;
  background-color: #D8D8D8;
  color: #FFFFFF;
  font-size: 36rpx;
}
.signin .btn_signin.active {
  background-color: #FF9805;
}

