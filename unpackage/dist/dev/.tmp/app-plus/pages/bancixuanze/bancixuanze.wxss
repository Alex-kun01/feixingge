.city_info {
  width: 100%;
  height: 350rpx;
  background: #ffffff;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.city_info .message {
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #F4F4F4;
  border-radius: 30rpx;
  text-indent: 30rpx;
  font-size: 24rpx;
  color: #222222;
}
.city_info .station_box .station {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 40rpx 0;
}
.city_info .station_box .station .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  color: #222222;
}
.city_info .station_box .station .left .icon {
  margin-right: 20rpx;
}
.city_info .station_box .station .left .icon .dian {
  width: 4rpx;
  height: 4rpx;
  background-color: #E1E1E1;
}
.city_info .station_box .station .left .icon .shu {
  width: 4rpx;
  height: 60rpx;
  background-color: #E1E1E1;
  margin: 10rpx 0;
}
.city_info .station_box .station .left .text {
  height: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.city_info .station_box .station .right {
  font-size: 24rpx;
  color: #FF9805;
  text-align: center;
}
.city_info .station_box .btn {
  font-size: 24rpx;
  color: #333333;
}
.city_info .station_box .btn .item {
  margin-right: 20rpx;
}
.city_info .station_box .btn .icon-gou {
  font-size: 22rpx;
  color: #FF9805;
  margin-right: 20rpx;
}
.content_box {
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.content_box .con_item {
  width: 710rpx;
  height: 166rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 53rpx 20rpx 40rpx 19rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content_box .con_item .con_message .top_ms text {
  font-size: 24rpx;
  color: #333333;
}
.content_box .con_item .con_message .top_ms text.red {
  font-size: 36rpx;
  color: #F90404;
  margin-right: 20rpx;
}
.content_box .con_item .con_message .top_ms text.color {
  color: #F90404;
}
.content_box .con_item .con_message .top_ms text.icon-gengduo {
  font-size: 15rpx;
  margin-left: 5rpx;
}
.content_box .con_item .con_message .bom_ms text {
  width: 110rpx;
  height: 34rpx;
  line-height: 34rpx;
  border: 1rpx solid #FF9805;
  box-sizing: border-box;
  border-radius: 6rpx;
  color: #FF9805;
  font-size: 20rpx;
  margin-right: 10rpx;
}
.content_box .con_item .com_btn {
  width: 100rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  background-color: #F90404;
  border-radius: 6rpx;
}

