  background: #FFFFFF;
}
.register .topber image {
  width: 20rpx;
  height: 36rpx;
  margin: 66rpx 0 0 30rpx;
}
.register .title {
  font-size: 88rpx;
  font-weight: 800;
  margin: 114rpx 0 93rpx 57rpx;
}
.register .r_text {
  height: 34rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #111111;
  margin: 0 0 102rpx 57rpx;
}
.register .form {
  margin-left: 56rpx;
}
.register .form .border_bom {
  width: 638rpx;
