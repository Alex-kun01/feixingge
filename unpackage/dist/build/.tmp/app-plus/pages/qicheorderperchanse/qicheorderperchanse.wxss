.topbar {
  height: 45px;
  line-height: 55rpx;
  width: 100%;
  background: #FDA426;
  position: relative;
}
.topbar image {
  width: 18rpx;
  height: 30rpx;
  margin: 66rpx 0 0 26rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.topbar .title {
  font-size: 32rpx;
  position: absolute;
  top: 50rpx;
  color: #FFFFFF;
  left: calc(50% - 50rpx);
}
.head_wrap {
  width: 100%;
  height: 40vw;
  background: #FDA426;
}
.head_wrap .time_wrap {
  margin: 0 auto;
  color: #ffffff;
  line-height: 30vw;
  width: 95%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.swiper_wrap {
  width: 100%;
  height: 30vh;
}
.swiper_wrap image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.info_wrap {
  width: 95%;
  margin: 0 auto;
  background: #FFFFFF;
  border-radius: 5px;
  position: relative;
  margin-top: -13vw;
}
.info_wrap .item_wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  width: 100%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 4vw;
  height: 18vw;
}
.info_wrap .item_wrap .rt_img {
  width: 10vw;
  height: 10vw;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translateX(-50%) translateY(-50%);
          transform: translateX(-50%) translateY(-50%);
}
.info_wrap .item_wrap .name {
  line-height: 18vw;
  width: auto;
  font-size: 5vw;
  width: 30%;
}
.info_wrap .item_wrap .time_show {
  line-height: 18vw;
  width: auto;
  text-align: center;
}
.info_wrap .item_wrap .user_mes {
  width: 70%;
  font-size: 4vw;
  padding: 4vw 0;
}
.info_wrap .item_wrap .user_mes .user_idcard {
  color: #999999;
}
.info_wrap .item_wrap .phone {
  padding: 0;
  line-height: 18vw;
  font-size: 5vw !important;
}
.info_wrap .item_wrap .search_btn {
  width: 90%;
  height: 13vw;
  line-height: 13vw;
  border-radius: 10vw;
  background: #FF9805;
}
.info_wrap .btn_wrap {
  height: 18vw;
  margin-bottom: 6vw;
}
.go_center {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translateX(-50%) translateY(-50%);
          transform: translateX(-50%) translateY(-50%);
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 16vw;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  line-height: 16vw;
}
.footer .all_price {
  position: relative;
  left: 12vw;
  color: #F90404;
}
.footer .mingxi_wrap {
  position: relative;
  left: 35vw;
  font-size: 4vw;
  color: #999999;
}
.footer .btn_wrap {
  left: 80% !important;
  display: block;
  font-weight: 300;
  letter-spacing: 0.4vw;
  padding: 0 2vw;
  width: 33vw;
  background: #FF9805 !important;
  border-radius: 10vw !important;
}

